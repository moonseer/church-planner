# Environment Variables for Church Planner Application - EXAMPLE FILE
# Copy this file to .env and replace the values with your own

# Server Configuration
PORT=8080
NODE_ENV=development

# JWT Authentication
# IMPORTANT: In production, use a strong, randomly generated secret
# Example: Use `openssl rand -base64 32` to generate a secure random string
JWT_SECRET=replace_with_secure_random_string
JWT_EXPIRE=2h
JWT_REFRESH_EXPIRES_IN=7d

# MongoDB Connection
MONGO_URI=mongodb://mongodb:27017/church-planner

# CORS Configuration
CORS_ORIGIN=http://localhost:4000

# Development Settings
CHOKIDAR_USEPOLLING=true 